<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@(ViewData["Title"] != null ? $"{ViewData["Title"]} - TBD Application" : "TBD Application")</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDwHe+5SNsnUrp2B0iF5+CP7Qvf6x5Q=="
          crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css"
          rel="stylesheet"
          integrity="sha512-Vd1WZDm3zeGFN3uL+5bI5tNx8k5qD7CXiRLYVckfO8D2u2Eec1uT7NXBTsJmg5juL+ki+0xtj+KwAS+UzQ+xg=="
          crossorigin="anonymous">

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
        }

        .main-content {
            flex: 1 0 auto;
            padding: 2rem 0;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .table {
            background-color: white;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
        }

        .nav-link.active {
            color: #0d6efd !important;
            font-weight: 600;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 1rem 0;
            flex-shrink: 0;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem 0;
            margin-bottom: 1.5rem;
            border-radius: 0.5rem;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
            margin-bottom: 0.5rem;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: rgba(255, 255, 255, 0.7);
        }

        .breadcrumb-item a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            color: white;
        }

        .breadcrumb-item.active {
            color: white;
        }

    </style>

    <!-- Page-specific styles -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Main navigation">
    <div class="container">
        <a class="navbar-brand" href="/" aria-label="TBD Application Home">
            <i class="bi bi-building me-1"></i> TBD Application
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @{
                    var controller = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
                }
                <li class="nav-item">
                    <a class="nav-link @(controller == "home" ? "active" : "")" href="/">
                        <i class="bi bi-house me-1"></i> Home
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle @(controller is "address" or "schedule" or "service" or "user" ? "active" : "")"
                       href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-grid me-1"></i> Services
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item @(controller == "address" ? "active" : "")" href="/Address">
                                <i class="bi bi-geo-alt me-1"></i> Address Management
                            </a></li>
                        <li><a class="dropdown-item @(controller == "schedule" ? "active" : "")" href="/Schedule">
                                <i class="bi bi-calendar me-1"></i> Schedule Management
                            </a></li>
                        <li><a class="dropdown-item @(controller == "service" ? "active" : "")" href="/Service">
                                <i class="bi bi-tools me-1"></i> Service Management
                            </a></li>
                        <li><a class="dropdown-item @(controller == "user" ? "active" : "")" href="/User">
                                <i class="bi bi-people me-1"></i> User Management
                            </a></li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle @(controller == "auth" ? "active" : "")" href="#" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i> Account
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Auth/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a></li>
                        <li><a class="dropdown-item" href="/Auth/Register">
                                <i class="bi bi-person-plus me-1"></i> Register
                            </a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="/Auth/Profile">
                                <i class="bi bi-person me-1"></i> Profile
                            </a></li>
                        <li>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content -->
<main class="flex-grow-1">
    <div class="container main-content">
        <!-- Page Header (Optional) -->
        @{
            var action = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
            var pageTitle = ViewData["Title"]?.ToString();
            var showHeader = ViewData["ShowHeader"] as bool? ?? true; // Allow pages to disable header
            var pageIcon = controller switch
            {
                "address" => "bi-geo-alt",
                "schedule" => "bi-calendar",
                "service" => "bi-tools",
                "user" => "bi-people",
                "auth" => "bi-shield-check",
                "home" => "bi-house",
                _ => "bi-grid"
            };
            var pageSubtitle = controller switch
            {
                "address" => "Manage user addresses and locations",
                "schedule" => "Manage schedules and appointments",
                "service" => "Manage available services",
                "user" => "Manage system users",
                "auth" => "Authentication and security",
                "home" => "Dashboard and overview",
                _ => "Application management"
            };
        }

        @if (showHeader && !string.IsNullOrEmpty(pageTitle))
        {
            <div class="page-header">
                <div class="container">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            @if (controller != "home")
                            {
                                <li class="breadcrumb-item"><a href="/@controller">@controller</a></li>
                            }
                            @if (action != "index")
                            {
                                <li class="breadcrumb-item active" aria-current="page">@pageTitle</li>
                            }
                        </ol>
                    </nav>
                    <div class="d-flex align-items-center">
                        <i class="@pageIcon display-6 me-3"></i>
                        <div>
                            <h1 class="display-6 mb-0">@pageTitle</h1>
                            @if (!string.IsNullOrEmpty(pageSubtitle))
                            {
                                <p class="lead mb-0 opacity-75">@pageSubtitle</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Alerts -->
        @if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null || TempData["InfoMessage"] != null)
        {
            <partial name="_Alerts"/>
        }

        <!-- Page Content -->
        <div class="row">
            <div class="col-12">
                @RenderBody()
            </div>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="mb-0">&copy; @DateTime.Now.Year TBD Application. All rights reserved.</p>
            </div>
            <div class="col-md-6 text-md-end">
                <small class="text-muted">Built with ASP.NET Core</small>
            </div>
        </div>
    </div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"
        integrity="sha512-7Pi/otdlbbCR+5vG7V1M1T6MtD2F18h3Wv7Jq/4kNTS1rV/aT7kP6hV3oM5D+ozzh5m9ogyq0zTu0o5D5u6H4=="
        crossorigin="anonymous"></script>

<!-- Page-specific scripts -->
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
